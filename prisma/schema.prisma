datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         String      @id @default(cuid())
  email      String      @unique
  prayerDays PrayerDay[]
}

model PrayerDay {
  id       String       @id @default(cuid())
  date     DateTime
  userId   String
  fajr     PrayerStatus @default(NOT_PRAYED)
  dhuhr    PrayerStatus @default(NOT_PRAYED)
  asr      PrayerStatus @default(NOT_PRAYED)
  maghrib  PrayerStatus @default(NOT_PRAYED)
  isha     PrayerStatus @default(NOT_PRAYED)
  tahajjud Boolean      @default(false)
  fast     Boolean      @default(false)
  user     User         @relation(fields: [userId], references: [id])

  @@unique([userId, date])
  @@index([userId])
  @@index([date])
}

enum PrayerStatus {
  NOT_PRAYED
  PRAYED_QADA
  PRAYED_ON_TIME
  PRAYED_WITH_JAMAAT
}
