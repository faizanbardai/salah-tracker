generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id         String      @id @default(cuid())
  email      String?     @unique
  prayerDays PrayerDay[]
}

model PrayerDay {
  id       String       @id @default(cuid())
  date     DateTime
  userId   String
  fajr     PrayerStatus @default(NOT_PRAYED)
  dhuhr    PrayerStatus @default(NOT_PRAYED)
  asr      PrayerStatus @default(NOT_PRAYED)
  maghrib  PrayerStatus @default(NOT_PRAYED)
  isha     PrayerStatus @default(NOT_PRAYED)
  tahajjud PrayerStatus @default(NOT_PRAYED)
  user     User         @relation(fields: [userId], references: [id])
}

enum PrayerStatus {
  NOT_PRAYED
  PRAYED_QADA
  PRAYED_ON_TIME
  PRAYED_WITH_JAMAAT
}
