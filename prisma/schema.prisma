datasource db {
  provider          = "sqlserver"
  url               = env("AZURE_DATABASE_URL")
  shadowDatabaseUrl = env("AZURE_DATABASE_URL_SHADOW")
  relationMode      = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         Int         @id @default(autoincrement())
  email      String      @unique
  prayerDays PrayerDay[]
}

model PrayerDay {
  id     Int  @id @default(autoincrement())
  userId Int
  User   User @relation(fields: [userId], references: [id])

  date DateTime

  fajr    Int @default(0)
  dhuhr   Int @default(0)
  asr     Int @default(0)
  maghrib Int @default(0)
  isha    Int @default(0)

  tahajjud Boolean @default(false)
  fast     Boolean @default(false)

  @@unique([date, userId])
  @@index([userId])
}
