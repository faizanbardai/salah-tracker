generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id         String      @id @default(cuid())
  email      String?     @unique
  prayerDays PrayerDay[]
}

model PrayerDay {
  id       String       @id @default(cuid())
  date     String       @unique
  userId   String
  fajr     PrayerStatus @default(NOT_PRAYED)
  dhuhr    PrayerStatus @default(NOT_PRAYED)
  asr      PrayerStatus @default(NOT_PRAYED)
  maghrib  PrayerStatus @default(NOT_PRAYED)
  isha     PrayerStatus @default(NOT_PRAYED)
  tahajjud PrayerStatus @default(NOT_PRAYED)
  user     User         @relation(fields: [userId], references: [id])
}

enum PrayerStatus {
  NOT_PRAYED
  PRAYED_QADA
  PRAYED_ON_TIME
  PRAYED_WITH_JAMAAT
}
